# ============================================
# PRODUCTION ENV - Backend SMK Kristen 5
# Salin file ini ke .env dan isi nilainya
# ============================================

NODE_ENV=production
PORT=5000
BASE_URL=https://api.smkkrisma.sch.id

# MongoDB Atlas (tetap pakai cloud, tidak perlu ganti)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smk-kristen5?retryWrites=true&w=majority

# JWT Secret (gunakan string acak panjang)
JWT_SECRET=GANTI_DENGAN_STRING_ACAK_MINIMAL_64_KARAKTER
JWT_EXPIRE=7d

# Cloudinary (tetap sama, tidak perlu ganti)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL untuk CORS
FRONTEND_URL=https://smkkrisma.sch.id
